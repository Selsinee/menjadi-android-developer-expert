<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AnimeList" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/DarkSlateGray</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/LightSlateGray</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/DimGray</item>
        <item name="colorSecondaryVariant">@color/DarkGray</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorAccent">@color/DarkSalmon</item>

        <item name="android:colorBackground">@color/LightGrey</item>
        <item name="android:editTextColor">?attr/colorOnPrimary</item>
        <item name="android:textColorHint">?attr/colorOnPrimary</item>
        <item name="android:textColor">@color/DimGray</item>

        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <item name="android:navigationBarColor">?attr/colorPrimary</item>
    </style>

    <style name="Theme.AnimeList.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.AnimeList.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.AnimeList.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>